  </SoundDef>
  
  <SoundDef ParentName="GunplaySound">
    <defName>GunplayMinigunSpinup</defName>  
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Gunplay/MinigunSpinup</clipFolderPath>
          </li>
        </grains>      
        <volumeRange>9~9</volumeRange>
        <pitchRange>0.93~1.07</pitchRange>
        <sustainAttack>0.5</sustainAttack>
        <sustainRelease>0.5</sustainRelease>
        <muteWhenPaused>True</muteWhenPaused>
      </li>
    </subSounds>
    
    <priorityMode>PrioritizeNearest</priorityMode>
    <sustain>True</sustain>
  </SoundDef>
  
